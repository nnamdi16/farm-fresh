{
  "name": "rest-api-nodejs-mongodb",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/app.js",
    "dev": "nodemon ./bin/www",
    "build": "tsc",
    "test": "nyc _mocha --timeout 10000 --exit --report lcovonly -- -R spec",
    "lint": "eslint --fix --config .eslintrc.json \"**/*.js\"",
    "docs": "jsdoc -d docs --configure jsdoc.conf dist/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "prod": "npm run build && npm run start"
  },
  "dependencies": {
    "@types/express": "^4.17.8",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.6.4",
    "authy": "^1.4.0",
    "bcrypt": "^5.0.0",
    "codacy-coverage": "^3.4.0",
    "concurrently": "^5.3.0",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.0",
    "express-jwt": "^5.3.1",
    "express-validator": "^6.2.0",
    "jsdoc": "^3.6.5",
    "jsdoc-http-plugin": "^0.3.2",
    "jsonwebtoken": "^8.5.1",
    "mocha-lcov-reporter": "^1.3.0",
    "moment": "^2.24.0",
    "mongoose": "^5.7.6",
    "morgan": "~1.9.0",
    "nodemailer": "^6.3.1",
    "otplib": "^12.0.1",
    "twilio": "^3.49.0"
  },
  "devDependencies": {
    "eslint": "^6.5.1",
    "istanbul": "^0.4.5",
    "nodemon": "^1.19.4",
    "nyc": "^14.1.1",
    "tsc": "^1.20150623.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  }
}
